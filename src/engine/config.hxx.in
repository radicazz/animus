#pragma once

#include <string_view>

namespace engine {
    constexpr std::string_view project_name = "@PROJECT_NAME@";

    constexpr bool is_debug_build = @ENGINE_IS_DEBUG@;

    constexpr bool should_log_info = @ENGINE_LOG_INFO@;
    constexpr bool should_log_warnings = @ENGINE_LOG_WARNING@;
    constexpr bool should_log_errors = @ENGINE_LOG_ERROR@;

    namespace version {
        /**
        * Project version (major, minor, patch) as a string.
        */
        constexpr std::string_view full = "@PROJECT_VERSION@";

        constexpr int major = @PROJECT_VERSION_MAJOR@;
        constexpr int minor = @PROJECT_VERSION_MINOR@;
        constexpr int patch = @PROJECT_VERSION_PATCH@;
    }

    /**
    * @brief Build configuration as a string.
    *        Either "Release", "Debug", "RelWithDebInfo" or "MinSizeRel"
    */
    constexpr std::string_view build_type = "@CMAKE_BUILD_TYPE@";

    constexpr std::string_view build_date = "@ENGINE_BUILD_DATE@";
    constexpr std::string_view build_time = "@ENGINE_BUILD_TIME@";    

    constexpr std::string_view system_name = "@CMAKE_SYSTEM_NAME@";
    constexpr std::string_view system_processor = "@CMAKE_SYSTEM_PROCESSOR@";
    constexpr std::string_view system_version = "@CMAKE_SYSTEM_VERSION@";

    constexpr const char* compiler_id = "@CMAKE_CXX_COMPILER_ID@";
    constexpr const char* compiler_version = "@CMAKE_CXX_COMPILER_VERSION@";
}
